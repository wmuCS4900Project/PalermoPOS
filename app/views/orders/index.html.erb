<%= render 'bars/top' %>

<style>
  h3 {
    font-size: 30px;
  }
  h2 {
    font-size: 24px;
  }
</style>


<br>
  <h2>
    <%= link_to 'New Order', orders_custsearch_path %>
  </h2>
<br>

<%= link_to 'View all Orders', orders_all_path %>

<%= link_to 'Print end of day', orders_endofday_path %>

<h3>Today's Orders</h3><br>

<h1>Pending Orders</h1>

<table>
  <thead>
    <tr>
      <th><%= "Order Number" %></th>
      <th><%= "Ordered by" %></th>
      <th><%= "Ordered at" %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending.each do |order| %>
      <tr>
        <td><%= order.id %> <br>
        <td><%= @customers.find(order.customer_id).FirstName %> <%= @customers.find(order.customer_id).LastName %> <br></td>
        <td><%= order.created_at %> </td>
        <td><%= link_to 'Cash Out', orders_cashout_path(:id => order.id ) %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Receipt', orders_receipt_path(id: order.id, print: "no") %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


