<%= render 'bars/top' %>

<h1><%= "Paid: Order" %> <%= @order.id %></h1>


<body>
  
  <% @orderlines.each do |a| %>
    <%= @products.find(a.product_id).Name %>
    <%= a.ItemTotalCost %><br>
  <% end %><br>
  
  <%= "Subtotal:" %>
  <%= @order.Subtotal %><br>
  <% if @order.Discounts > 0.0 %>
    <%= "Discount:"%>
    <%= @order.Discounts %><br>
  <% end %>
  <%= "Taxes:" %>
  <%= @order.Tax %><br>
  <%= "Total Due" %>
  <%= @order.TotalCost %>
  
  <%= "Paid: " %>
  <%= @order.AmountPaid %>
  <%= "Change due: " %>
  <%= @order.ChangeDue %>
  
  
</body>