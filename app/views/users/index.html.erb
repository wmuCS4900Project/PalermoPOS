<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if flash[:danger] %>
  <div class="danger"><%= flash[:danger] %></div>
<% end %>

<% if logged_in? %>
<p>
  Logged in as <%= current_user.Name %> <%= link_to 'Log out?', logout_url, method: "delete" %>
</p>

<% else %>
<p>
  <%= link_to 'Log in', login_url %>
</p>

<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Driver?</th>
      <th>Admin?</th>
      <th>Created Date</th>
      <th>Updated Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% 
    @users.each do |user| %>
      <tr>
        <td><%= user.Name %></td>
        <td><%= user.username %></td>
        <td><%= (user.has_role? :driver) ? 'Yes' : 'No' %></td>
        <td><%= (user.has_role? :admin) ? 'Yes' : 'No' %></td>
        <td><%= user.created_at.strftime("%l:%M %p %B %m, %Y") %></td>
        <td><%= user.updated_at.strftime("%l:%M %p %B %m, %Y") %></td>
        <td><%= link_to 'Show', user %></td>
        <td>
        <% if logged_in? #TODO Extend has_role for nil to return false 
          puts user.id
          puts current_user.id
          %>
          <% if ((user.id == current_user.id) || (current_user.has_role? :admin)) %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <% end %>
        <% end %>
        </td>
        <td>
        <% if logged_in? %>
          <% if (current_user.has_role? :admin) %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %> 
        <% end; %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
